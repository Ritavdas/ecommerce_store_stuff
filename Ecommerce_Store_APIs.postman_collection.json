{
  "info": {
    "name": "Ecommerce Store APIs",
    "description": "Complete API collection for testing the ecommerce store with discount system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "cartId",
      "value": "",
      "type": "string"
    },
    {
      "key": "discountCode",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/products",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Discount Codes",
      "item": [
        {
          "name": "Get Available Discount Codes",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/discount-codes",
              "host": ["{{baseUrl}}"],
              "path": ["api", "discount-codes"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Cart Operations",
      "item": [
        {
          "name": "Create New Cart",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.id) {",
                  "        pm.collectionVariables.set('cartId', response.data.id);",
                  "        console.log('Cart ID saved:', response.data.id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/cart",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cart"]
            }
          },
          "response": []
        },
        {
          "name": "Get Cart Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/cart/{{cartId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cart", "{{cartId}}"]
            }
          },
          "response": []
        },
        {
          "name": "Add iPhone to Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productId\": \"prod_001\",\n  \"quantity\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/cart/{{cartId}}/items",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cart", "{{cartId}}", "items"]
            }
          },
          "response": []
        },
        {
          "name": "Add MacBook to Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productId\": \"prod_002\",\n  \"quantity\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/cart/{{cartId}}/items",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cart", "{{cartId}}", "items"]
            }
          },
          "response": []
        },
        {
          "name": "Add AirPods to Cart (Quantity 2)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productId\": \"prod_003\",\n  \"quantity\": 2\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/cart/{{cartId}}/items",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cart", "{{cartId}}", "items"]
            }
          },
          "response": []
        },
        {
          "name": "Remove iPhone from Cart",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/cart/{{cartId}}/items/prod_001",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cart", "{{cartId}}", "items", "prod_001"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Checkout",
      "item": [
        {
          "name": "Checkout without Discount",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cartId\": \"{{cartId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/checkout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "checkout"]
            }
          },
          "response": []
        },
        {
          "name": "Checkout with Discount Code",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.newDiscountCode) {",
                  "        pm.collectionVariables.set('discountCode', response.data.newDiscountCode.code);",
                  "        console.log('New discount code saved:', response.data.newDiscountCode.code);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cartId\": \"{{cartId}}\",\n  \"discountCode\": \"{{discountCode}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/checkout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "checkout"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Admin APIs",
      "item": [
        {
          "name": "Get Admin Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/admin/stats",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "stats"]
            }
          },
          "response": []
        },
        {
          "name": "Generate Discount Code (Manual)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.code) {",
                  "        pm.collectionVariables.set('discountCode', response.data.code);",
                  "        console.log('Manual discount code saved:', response.data.code);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"forceGenerate\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/discount",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "discount"]
            }
          },
          "response": []
        }
      ]
    },
